{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    "target": "es5",
    "module": "CommonJS",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["./src/*"]
    }
  },
  "include": ["./src"]
}
