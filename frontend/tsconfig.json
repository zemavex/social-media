{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    "target": "es5",
    "module": "es6",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["./src/*"]
    },
    "jsx": "react-jsx"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
