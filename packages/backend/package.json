{
  "name": "backend",
  "version": "0.0.0",
  "scripts": {
    "lint:ts": "eslint & tsc --noEmit",
    "build": "tsc && tsc-alias && npm run copySqlFiles",
    "dev": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\" \"nodemon --enable-source-maps ./dist/index.js\")",
    "copySqlFiles": "ncp src/database/migrations dist/database/migrations",
    "migrate": "node --enable-source-maps dist/database/scripts/runMigrations.js",
    "deleteTables": "tsc && tsc-alias && node --enable-source-maps dist/database/scripts/deleteTables.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "concurrently": "^9.1.0",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "ncp": "^2.0.0",
    "nodemon": "^3.1.7",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cron": "^3.3.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "pg": "^8.13.1",
    "socket.io": "^4.8.1",
    "uuid": "^11.0.3",
    "zod": "^3.24.1"
  }
}
