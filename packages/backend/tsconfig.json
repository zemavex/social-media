{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "../",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "paths": {
      "@/*": ["./src/*"],
      "~shared/*": ["../shared/src/*"]
    }
  },
  "include": ["./src", "env.d.ts", "../shared/src"]
}
