{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "../",
    "outDir": "./dist",
    "target": "ES5",
    "module": "ES6",
    "allowJs": true,
    "lib": ["ES5", "DOM"],
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "~shared/*": ["../shared/src/*"]
    }
  },
  "include": [
    "./src",
    "./config",
    "./webpack.config.ts",
    "stylelint.config.mjs",
    "./env.d.ts",
    "../shared/src"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
